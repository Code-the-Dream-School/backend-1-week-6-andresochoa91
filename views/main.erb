<h1>Guess a number between 1 and 100. You have <%= session[:chances] %> chances </h1>
<h4><%= session[:message] %></h4>
<h4><%= session[:greeting] %></h4>
<div>
  <form method="post" action="/result" >
    <input type="hidden" name="_method" value="put"/>
    <label for="content">Enter Your Number</label>
    <input type="text" name="current_number"/>
    <input type="submit" value="Guess">
  </form>
</div>
<h2>Numbers guessed</h2>

<% session[:guesses].each do |guess| %>
  <h3><%= guess %></h3>
<% end %>

